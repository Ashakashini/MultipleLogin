@model MultipleLogin.DAL.LeaveApplyModel
@{
    ViewData["Title"] = "Apply for Leave";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var employeeList = ViewBag.EmployeeList as List<SelectListItem>; // assume from controller
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fas fa-paper-plane me-2"></i>Apply for Leave</h4>
        </div>
        <div class="card-body">
            <form asp-action="LeaveApply" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="EmployeeId" class="form-label fw-bold">Select Employee</label>
                        <select asp-for="EmployeeId" asp-items="employeeList" class="form-select">
                            <option value="">-- Select Employee --</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LeaveType" class="form-label fw-bold">Leave Type</label>
                        <select asp-for="LeaveType" class="form-select">
                            <option value="">-- Select --</option>
                            <option>Casual</option>
                            <option>Sick</option>
                            <option>Earned</option>
                        </select>
                        <span asp-validation-for="LeaveType" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label fw-bold">End Date</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Reason" class="form-label fw-bold">Reason</label>
                    <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Enter reason for leave"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-paper-plane me-2"></i>Submit Leave Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>