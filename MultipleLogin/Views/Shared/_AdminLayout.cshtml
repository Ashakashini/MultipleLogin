<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <style>
        body {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
        }

        .sidebar a {
            color: white;
            padding: 15px;
            display: block;
            text-decoration: none;
        }

        .sidebar a:hover {
                    background-color: #FFFAFA;
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: #007bff;
            color: white;
        }

        .navbar .navbar-brand,
        .navbar .nav-link {
            color: white;
        }

        .content {
            padding: 20px;
            background-color: #f8f9fa;
            flex-grow: 1;
            overflow-y: auto;
        }

        
        #sidebar {
            transition: margin-left 0.3s ease;
        }

        .sidebar-hidden {
            margin-left: -250px; /* Adjust this value based on your sidebar width */
        }
    
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar" style="background-color:#B22222;">
        <h4 class="p-3"><i class="fas fa-user-shield me-2"></i>Admin Panel</h4>
        <a href="/Home/AdminDashboard"><i class="fas fa-home"></i> Dashboard</a>
        <a href="#"><i class="fas fa-envelope me-2"></i> Email</a>
        <a asp-action="LeaveApply" asp-controller="Employee">
            <i class="fas fa-file-alt me-2"></i> Leave Application
        </a>
        <div class="dropdown">
            <a class="dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-users me-2"></i> Employee
            </a>

            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end me-2">
                <li><a class="dropdown-item" href="/Employee/ViewEmployees"><i class="fas fa-eye me-2"></i> View</a></li>
                <li><a class="dropdown-item" href="/Employee/EmployeeRegistration"><i class="fas fa-user-plus me-2"></i> Register</a></li>
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-users-cog me-2"></i> Hr
            </a>

            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end me-2">
                <li><a class="dropdown-item" href="#"><i class="fas fa-eye me-2"></i> View</a></li>
                <li><a class="dropdown-item" href="/Hr/HrRegistration"><i class="fas fa-user-plus me-2"></i> Register</a></li>
            </ul>
        </div>
        <a href="/Account/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand navbar-dark  px-3" style="background-color:#B22222;">
            <button class="btn btn-outline-light" id="toggleSidebar">
                <i id="sidebarToggleIcon" class="fas fa-angle-left"></i> <!-- Icon changes dynamically -->
            </button>
            <div class="dropdown ms-auto">
                
                    <a class="dropdown-toggle text-white mx-auto text-decoration-none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Admin
                    </a>

                <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end me-3">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                    </ul>
                   
            </div>
            
        </nav>

        <!-- Dynamic Content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('#toggleSidebar').on('click', function () {
            $('#sidebar').toggleClass('sidebar-hidden');

            let $icon = $('#sidebarToggleIcon');
            if ($('#sidebar').hasClass('sidebar-hidden')) {
                $icon.removeClass('fa-angle-left').addClass('fa-angle-right');
            } else {
                $icon.removeClass('fa-angle-right').addClass('fa-angle-left');
            }
        });
    });
</script>